<style>
html{
    overflow: hidden;
}
html,body{
    height: 100%;
    width: 100%;
}
body{
    background-color: #87fff6;
    margin: 0px;
}
h1{
    text-align: center;
}
.visible{
    display: block !important;
}
.show {
  opacity: 1 !important;
}
.hide{
    display: none;
}
.red{
    background-color: rgb(255, 205, 205);
}
#list {
    display: none;
    opacity: 0;
    transition: opacity 0.12s ease-in-out;
    margin: 0px;
    padding: 0px;
    height: fit-content;
    width: fit-content;
    margin: auto;
}
#items{
    background-color: #edfcff;
    display: grid;
    grid-template-rows: 33% 33% 34%;
    width: 140px;
    height: 150px;
    border-radius: 5px;
}
#items p{
    margin: 0px;
    font-size: 22px;
    font-family: monospace;
    color: grey;
}
#name{
    width: fit-content;
    height: fit-content;
    margin: 0px;
    display: block;
    border: 12px #7640ff;
    border-style: ridge;
    padding: 12px;
    background: #efe8ff;
    font-size: 38px;
    color: #3d00b5;
}
#nameDiv{
    display: grid;
    place-content: center;
}
#settings{
    justify-self: end;
    align-items: end;
    display: grid;
    grid-template-rows: 50% 50%;
    height: 178%;
    width: 124px;
    position: relative;
    margin-right: 30px;
    margin-top: 10px;
}
#settingsTriangle{
  width: 0;
  height: 0;
  border-right: 15px solid transparent;
  border-bottom: 15px solid #edfcff;
  border-left: 15px solid transparent;
  margin: auto;
}
#settingsItem1,#settingsItem2,#settingsItem3{
    width: 100%;
    height: 100%;
    display: grid;
    place-content: center;
}
#settingsItem1:hover,#settingsItem2:hover,#settingsItem3:hover{
    background-color: #c4d2d4;
    cursor: pointer;
}
#settingsItem1:active,#settingsItem2:active,#settingsItem3:active{
    background-color: #b2bec1;
    cursor: pointer;
}
#listParent{
    height: 100%;
}
#gearIcon{
    font-size: 75px;
    color: #0400ff;
    font-weight: bold;
    text-align: center;
    user-select: none;
    width: 104px;
    height: 104px;
}
#gearIconParent{
    margin: auto;
    display: grid;
    place-content: center;
}
#gearIcon:hover{
    transition:10ms;
    cursor: pointer;
    background-color: #8f8f8f52;
    border-radius: 10px;
}
.gearActiveColor{
    background-color: #7a7a7a52!important;
    border-radius: 10px;
    transition: 10ms;
}
#level{
    margin: 0px;
    text-align: center;
    font-size: 40px;
    color: #9100ff;
    font-family: monospace;
}
#levelHead{
    margin: auto;
}
#progressBar {
    height: 40px;
    width: 560px;
    transition: width 0.5s;
    margin: auto;
    border: 5px solid darkgreen;
    border-radius: 5px;
    position: relative;
}
progress::-webkit-progress-bar {
  background-color: #d3ffdc;
}
#progressBar::-webkit-progress-value {
  background-color: #45e04a;
  transition: width 0.5s;
}
#progressBar::before {
    content: "<%=Points%>/<%=Math.round(100*(1.5 **(Level-1)))%>";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 24px;
    font-family: monospace;
    color: #007c3d;
}
  
#sideButtons{
    height: 130px;
    width: 100%;
    display: grid;
    grid-template-columns: 28% 44% 28%;
    background-color: #c9fffb;
    grid-template-rows: 100%;
}
#logoutButton{
    font-size: 35px;
    padding: 10px;
    background: bisque;
    border: 5px solid darkblue;
}
#submitButtonForm{
    justify-self: end;
}
#chooseLevel{
    text-align: center;
    font-size: 150px;
}
#sign{
    float: right;
    margin-right: 4%;
}
#sign a{
    background-color: #f9ba17;
    padding: 6px;
    text-align: center;
    color: rgb(0, 0, 169);
    font-family: monospace;
    font-weight: 700;
    font-size: 18px;
    text-decoration: none;
    border: 4px solid #3100ff;
}
#mathPicture{
    height: 100%;
    margin: auto;
}

#menuDiv{
    display: none;
    place-content: center;
}
#menuIcon{
  width:50px;
  height: 50px;
  display:grid;
  grid-template-rows: 16% 17% 16% 17% 16% 18%;
}
.menuLines{
  width: 100%;
  height: 100%;
  background-color: black;
}
#loveMathPic{
    height: 60vh;
    margin: auto;
    display: block;
    margin-top: 4vh;
}
</style>