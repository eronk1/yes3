<script>
let checkUser = false;
let checkPass = false;
//<%try{%>
    $('#userErrorText').text("<%=message%>");
//<%}catch(e){%>
    console.log(e);
//<%}%>

$('#backButton').on('click',()=>{
    location.href = "/";
})
$('#signUpButton').on('click',()=>{
    location.href = "/signUp";
})
$('#submitButton').on('click',()=>{
    if(checkUser&&checkPass){
        $('form').submit();
    }else{
        $('#userErrorText').text('Username and password required');
    }
})

$('#name').keyup(function(){
    checkUser = true;
    if($(this).val() == ''){
        checkUser = false;
    }
})
$('#password').keyup(function(){
    checkPass = true;
    if($(this).val() == ''){
        checkPass = false;
    }
})
$(document).ready(function() {
    $('#name').keypress(function(event) {
        if (event.which == 13) {
            event.preventDefault();
            $(event.target).blur();
            $('#password').focus();
            if(checkUser&&checkPass){
            $('form').submit();
            }
        }
    });
  
    $('#password').keypress(function(event) {
    if (event.which == 13) {
        event.preventDefault();
        $(event.target).blur();
        $('#next-input').focus();
        if(checkUser&&checkPass){
        $('form').submit();
        }else{
            $('#userErrorText').text('Username and password required');
        }
    }
  });
});

</script>