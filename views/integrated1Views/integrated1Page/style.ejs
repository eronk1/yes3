<style>
html{
    overflow: hidden;
}
body{
    background-color: rgb(0, 221, 255);
    margin: 0px;
}
section{
    display: grid;
    place-items: center;
}
#headings, p{
    color: blueviolet;
    font-size: 38px;
    font-family: monospace;
    margin: auto;
}
.buttonStyle{
    width: fit-content;
    height: 80px;
    margin: 30px;
}
.buttonStyle button:hover{
    cursor:default;
    background-color: #eeffa1;
    color: blue;
    transition: 0.2s;
    transform: scale(1.05);

}
.buttonStyle button:active{
    transform: scale(1.02);
    background-color: #c9ffa5;
}

.level1{
    background-color: bisque;
    color: blue;
    font-size: 50px;
    padding: 4px;
    padding-right: 8px;
    padding-left: 8px;
    border-width: 8px;
    border-radius: 7px;
}
.arrow {
  border: solid black;
  border-width: 0 3px 3px 0;
  display: inline-block;
  padding: 3px;
}
.up {
  transform: rotate(-135deg);
  -webkit-transform: rotate(-135deg);
}

.down {
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}
.arrowButton{
    
}
#headings{
    display: grid;
    grid-template-columns: 15% 70% 15%;
    width: 100%;
}
#backButton{
    font-size: 45px;
    padding: 5px;
    padding-right: 10px;
    padding-left: 10px;
    width: fit-content;
    height: fit-content;
    background: greenyellow;
    margin: 5%;
    border: 5px solid darkgreen;
    border-radius: 10px;
}
#levelButtons{
    display: grid;
    place-items: center;
}
@media screen and (min-device-width: 1100px) and (max-device-width: 1600px){
    .buttonStyle{
        margin: 22px;
    }
}

</style>